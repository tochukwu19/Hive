
{% if pagination.pages > 1 %}
  <nav role="navigation" class="flex justify-center items-center my-16">
    {% if pagination.previous %}
      <a href="{{ pagination.previous.url }}" class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-4 py-2 mx-1 rounded-sm font-medium">&laquo; Previous</a>
    {% endif %}

    {% for part in pagination.parts %}
      {% if part.is_link %}
        <a href="{{ part.url }}" class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-4 py-2 mx-1 rounded-sm font-medium">{{ part.title }}</a>
      {% elsif part.title == pagination.current_page %}
        <span class="border border-gray-600 bg-gray-600 text-white px-4 py-2 mx-1 rounded-sm font-medium">{{ part.title }}</span>
      {% else %}
        <span class="border border-gray-600 text-gray-600 px-4 py-2 mx-1 rounded-sm font-medium">{{ part.title }}</span>
      {% endif %}
    {% endfor %}

    {% if pagination.next %}
      <a href="{{ pagination.next.url }}" class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white px-4 py-2 mx-1 rounded-sm font-medium">Next &raquo;</a>
    {% endif %}
  </nav>
{% endif %}