<style></style>

<div class="w-full">
  <div class="text-[#1F2937] helvetica w-fit mx-auto my-16 text-center">
    <h3>Contact Us</h3>
    <h1 class="text-5xl font-[900]">We love hearing from you</h1>
  </div>

  <div class="relative bg-[#C3C4FE] px-6 py-8 rounded-[19px] w-[80%] md:w-[50%] lg:w-[40%] mt-32 mb-8 mx-auto border border-black flex items-center flex-col">
    <div class="absolute top-[-57px] w-fit">
        {% render "clipboard" %}
    </div>
    <div class="w-full p-6 bg-white border border-black rounded-[19px]">
      <h2 class="helvetica text-3xl font-[900] text-[#1F2937] text-center">CONTACT US</h2>
      {% form 'contact'
        , class: 'space-y-4' %}
        {% if form.posted_successfully? %}
          <p class="text-green-600 text-center">Thanks for contacting us! We'll get back to you soon.</p>
        {% endif %}

        {% if form.errors %}
          <div class="text-red-600">
            {% for field in form.errors %}
              <p>{{ field | capitalize }} - {{ form.errors.messages[field] }}</p>
            {% endfor %}
          </div>
        {% endif %}

        <div>
          <label for="ContactFormName" class="block font-[500] text-black">Name</label>
          <input
            type="text"
            id="ContactFormName"
            name="contact[name]"
            class="mt-2 block w-full rounded-[11px] border border-solid border-black p-2"
            placeholder="Enter your full name">
        </div>

        <div>
          <label for="ContactFormEmail" class="block font-[500] text-black">Email</label>
          <input
            type="email"
            id="ContactFormEmail"
            name="contact[email]"
            class="mt-2 block w-full rounded-[11px] border border-solid border-black p-2"
            placeholder="Enter your email address">
        </div>

        <div>
          <label for="ContactFormType" class="block font-[500] text-black">Inquiry Type</label>
          <select
            id="ContactFormType"
            name="contact[type]"
            class="mt-2 block w-full rounded-[11px] border border-solid border-black p-2">
            <option value="">Choose Inquiry Type</option>
            <option value="general">General Inquiry</option>
            <option value="support">Support</option>
            <option value="sales">Sales</option>
          </select>
        </div>

        <div>
          <label for="ContactFormMessage" class="block font-[500] text-black">Message</label>
          <textarea
            id="ContactFormMessage"
            name="contact[body]"
            rows="4"
            class="mt-2 block w-full rounded-[11px] border border-solid border-black p-2"
            placeholder="Enter your message..."></textarea>
        </div>

        <button type="submit" class="w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-orange-500 hover:bg-orange-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500">
          Submit
        </button>
      {% endform %}
    </div>
  </div>
</div>